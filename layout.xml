<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp" android:id="@+id/mesajresim">

    </ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="100dp" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/isim">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mesaj">

        </TextView>


    </LinearLayout>

</LinearLayout>
